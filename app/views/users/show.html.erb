<div class="container">
  <% if @user.present? %>
    <div class="col">
      <h2>Viewing <%= @user&.name %>'s account</h2>
    </div>
    <div class="col">
      <p>Account Balance: <%= @user&.account_balance %></p>
    </div>
  <% else %>
    <div class="alert alert-danger">
      <p>You don't have access to this user.</p>
    </div>
  <% end %>
  <div class="col">
    <%= link_to "View all concerts", concerts_path %>
  </div>
  <div class="col">
    <%= link_to "View my tickets", user_tickets_path(current_user) %>
  </div>
</div>

