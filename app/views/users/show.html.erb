<div class="container">
  <% if @user.present? %>
    <div class="col">
      <h2>Viewing <%= @user&.name %>'s account</h2>
    </div>
    <div class="col">
      <p>Account Balance: <%= @user&.account_balance %></p>
    </div>
  <% else %>
    <div class="alert alert-danger">
      <p>You don't have access to this user.</p>
    </div>
  <% end %>
  <div class="col">
    <%= link_to "View all concerts", concerts_path %>
  </div>
  <div class="col">
    <a href="#" class="js-more" data-id="<%= @user&.id %>">View my tickets</a>
  </div>
  <div class="col">
    <ul id="userTickets" class="list-group">
    </ul>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
  $(function() {
    $('.js-more').on('click', function() {
      var id = $(this).data("id")
    })
  })
</script>

