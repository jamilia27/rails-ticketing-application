<!DOCTYPE html>
<html>
  <head>
    <title>Ticketpower</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
      <%= "Logged in as #{current_user.name}" %> | <%= link_to "Your Account", user_path(current_user) %> | <%= link_to "Log Out", logout_path, method: :delete %>
    <% else %>
      <%= link_to "Sign In", signin_path %>
    <% end %>

    <% if alert %>
      <%= alert %>
    <% end %>

    <% if notice %>
      <%= notice %>
    <% end %>

    <%= yield %>
  </body>
</html>
